<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Published Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= number_to_currency(book.price, unit: "", precision: 2) %></td>
          <td><%= book.published_date %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Delete', delete_book_path(book) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New Book", new_book_path %>
